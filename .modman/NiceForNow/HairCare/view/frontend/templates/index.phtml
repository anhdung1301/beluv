<script>
    require(["jquery"], function ($) {

        $(".target").change(function () {
            var value = $("#condition1").val();
            $('#sub').show()

            var url = "<?= /* @noEscape */$block->getUrl('haircare/index/getajax')?>";
            $.ajax({
                type: "POST",
                url: url,
                dataType: "html",
                data: {
                    id: value
                },
                success: function (response) {
                    $('#sub').html(response);

                },
                error: function () {
                }
            });

        });
    })
</script>
